<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">
    <RelativeLayout
        android:id="@+id/re_pro"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/colorapp">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profile_back"
            android:background="@drawable/back_30px"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            />
        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:id="@+id/re_left"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:src= "@drawable/circleimg"
                android:layout_centerInParent= "true"
                android:id="@+id/image_profilee"
                android:layout_width= "240dp"
                android:layout_height= "240dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_toRightOf="@id/re_left"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/profile_fullname"
                android:textColor="@color/white"
                android:fontFamily="@font/font1"
                android:textStyle="bold"
                android:textSize="27dp"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_fullname"
                android:id="@+id/re_btnchange"
                android:visibility="visible"
                >
                <Button
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:textColor="@color/white"
                    android:text="Chỉnh sửa thông tin"
                    android:background="@drawable/chageprofile"
                    android:textSize="10dp"
                    android:id="@+id/chage_profile1"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/font1"
                    />
                <Button
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:textColor="@color/white"
                    android:text="Đăng xuất"
                    android:id="@+id/logout"
                    android:layout_toRightOf="@id/chage_profile1"
                    android:background="@drawable/chageprofile"
                    android:textSize="10dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/font1"
                    android:layout_marginLeft="10dp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_fullname"
                android:id="@+id/re_buttonsign"
                android:visibility="gone"
                >
                <Button
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:textColor="@color/white"
                    android:text="Đăng nhập"
                    android:background="@drawable/chageprofile"
                    android:textSize="10dp"
                    android:id="@+id/chage_signin"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/font1"
                    />
                <Button
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:textColor="@color/white"
                    android:text="Đăng ký"
                    android:id="@+id/profile_signup"
                    android:layout_toRightOf="@id/chage_signin"
                    android:background="@drawable/chageprofile"
                    android:textSize="10dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/font1"
                    android:layout_marginLeft="10dp"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/re_pro"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center"
            android:id="@+id/re_tt"
            >
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/profile_date"
                android:hint=""
                android:gravity="center"
                android:drawableLeft="@drawable/calen"
                android:paddingLeft="25dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/font1"
                android:background="@drawable/textprofile"
                android:layout_height="40dp"/>
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/profile_email"
                android:hint=""
                android:gravity="center"
                android:drawableLeft="@drawable/email_open_17px"
                android:paddingLeft="25dp"
                android:layout_below="@id/profile_date"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/font1"
                android:background="@drawable/textprofile"
                android:layout_height="40dp"/>
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/profile_phone"
                android:hint=""
                android:gravity="center"
                android:drawableLeft="@drawable/phone_17px"
                android:paddingLeft="25dp"
                android:layout_below="@id/profile_email"
                android:fontFamily="@font/font1"
                android:background="@drawable/textprofile"
                android:layout_marginBottom="5dp"
                android:layout_height="40dp"/>
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/profile_address"
                android:hint=""
                android:gravity="center"
                android:drawableLeft="@drawable/address_17px"
                android:paddingLeft="25dp"
                android:fontFamily="@font/font1"
                android:background="@drawable/textprofile"
                android:layout_below="@id/profile_phone"
                android:layout_height="40dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:id="@+id/re_save"
            android:layout_below="@id/re_tt"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tin đã lưu ❤"
                android:fontFamily="@font/font1"
                android:layout_marginLeft="20dp"
                android:background="@drawable/textprofile"
                android:layout_marginTop="10dp"
                android:textSize="15dp"
                android:id="@+id/list_pro"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/list_pro"
                android:id="@+id/recycle_tinluu"
                android:layout_marginTop="10dp"
                />
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>