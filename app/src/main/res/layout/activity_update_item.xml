<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UpdateItem">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:background="@color/colorSigup"
        >
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnupdateback"
            android:src="@drawable/back_30px"
            android:background="@null"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_dangtin"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollud"
            android:visibility="visible"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="5dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:paddingLeft="8dp"
                    >
                    <androidx.cardview.widget.CardView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        app:cardCornerRadius="10dp"

                        >
                        <ImageButton
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_camera"
                            android:background="@color/app1"
                            android:id="@+id/update_addimage"
                            />
                    </androidx.cardview.widget.CardView>
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:id="@+id/recycle_updateimage"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="5dp"
                        />
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_below="@id/re_21"
                    android:id="@+id/re_progress"
                    android:layout_marginBottom="5dp"
                    android:visibility="visible"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:id="@+id/pro_imeud"
                        android:visibility="visible"
                        android:textColor="@color/white"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:id="@+id/pro_ime1ud"
                        android:visibility="visible"
                        android:textColor="@color/white"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:orientation="vertical"
                    android:fitsSystemWindows="true"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Danh mục tin đăng"
                        />
                    <Spinner
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/sp_danhmucupdate"
                        android:background="@drawable/textprofile"
                        android:fontFamily="@font/font1"
                        android:gravity="center"
                        android:layout_marginBottom="5dp"
                        android:textSize="13dp"
                        />
                    <TextView
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chọn tỉnh"
                        />
                    <TextView
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/btn_tinhthanhud"
                        android:background="@drawable/textprofile"
                        android:fontFamily="@font/font1"
                        android:textColor="@color/black"
                        android:layout_marginBottom="5dp"
                        android:textSize="13dp"
                        />
                    <TextView
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chọn quận, huyện"

                        />
                    <TextView
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/btn_quanud"
                        android:background="@drawable/textprofile"
                        android:fontFamily="@font/font1"
                        android:textColor="@color/black"
                        android:layout_marginBottom="5dp"
                        android:textSize="13dp"
                        />
                    <TextView
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chọn phường, xã, thị trấn"
                        android:fitsSystemWindows="true"
                        />
                    <TextView
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/btn_phuongud"
                        android:background="@drawable/textprofile"
                        android:fontFamily="@font/font1"
                        android:textColor="@color/black"
                        android:layout_marginBottom="5dp"
                        android:textSize="13dp"
                        />
                    <TextView
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Diện tích (m2)"
                        />
                    <EditText
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/textprofile"
                        android:id="@+id/txt_dientichud"
                        android:fontFamily="@font/font1"
                        android:textColor="@color/black"
                        android:inputType="number"
                        android:layout_marginBottom="5dp"
                        android:textSize="13dp"
                        />
                    <TextView
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Giá (VN đồng)"
                        />
                    <EditText
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/textprofile"
                        android:id="@+id/txt_giaud"
                        android:inputType="number"
                        android:fontFamily="@font/font1"
                        android:textColor="@color/black"
                        android:maxLength="13"
                        android:textSize="13dp"
                        android:layout_marginBottom="5dp"
                        />
                    <TextView
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hướng nhà"
                        />
                    <EditText
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/textprofile"
                        android:id="@+id/txt_huongud"
                        android:fitsSystemWindows="true"
                        android:fontFamily="@font/font1"
                        android:textColor="@color/black"
                        android:textSize="13dp"
                        android:layout_marginBottom="5dp"
                        />
                    <TextView
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pháp lý"
                        />
                    <EditText
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/textprofile"
                        android:id="@+id/txt_phaplyud"
                        android:fontFamily="@font/font1"
                        android:textColor="@color/black"
                        android:layout_marginBottom="5dp"
                        android:textSize="13dp"
                        />
                    <TextView
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tiêu đề tin đăng"
                        />
                    <EditText
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/textprofile"
                        android:id="@+id/txt_tieudeud"
                        android:fontFamily="@font/font1"
                        android:textColor="@color/black"
                        android:layout_marginBottom="5dp"
                        android:textSize="13dp"
                        />
                    <TextView
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mô tả"
                        />
                    <EditText
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:lines="6"
                        android:background="@drawable/textprofile"
                        android:id="@+id/txt_motaud"
                        android:maxLength="3000"
                        android:inputType="textMultiLine"
                        android:fontFamily="@font/font1"
                        android:textColor="@color/black"
                        android:gravity="top|left"
                        android:textSize="13dp"
                        />
                </LinearLayout>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="Cập nhật"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center"
                    android:id="@+id/btn_dangtinup"
                    android:background="@color/app3"
                    android:visibility="gone"
                    />
                <Button
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="Đăng tin"
                    android:id="@+id/update_Dangtin"
                    android:background="@color/app3"
                    />
            </LinearLayout>
        </ScrollView>

    </RelativeLayout>
</LinearLayout>