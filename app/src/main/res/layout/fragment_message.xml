<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.message.Message">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/linear_message"
        android:gravity="center"
        android:visibility="gone"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/txt3"
            android:text="Bạn cần đăng nhập để xem tin nhắn"
            android:fontFamily="@font/font1"
            android:textSize="14dp"
            android:layout_marginBottom="10dp"
            />
        <Button
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:id="@+id/btn_dangnhapmess"
            android:text="Đăng nhập/Đăng ký"
            android:fontFamily="@font/font1"
            android:textStyle="bold"
            android:textSize="13dp"
            android:background="@drawable/border"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/linear_mess"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/error"
            android:text="Bạn chưa có tin nhắn"
            android:fontFamily="@font/font1"
            android:textSize="20dp"
            android:textStyle="bold"
            android:gravity="center"
            android:visibility="gone"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recycle_chatuser"
            />
    </LinearLayout>
</LinearLayout>