<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TTTinDang">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:visibility="visible"
        android:layout_alignParentBottom="true"
        android:id="@+id/ln2"
        >
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:stretchColumns="*"
            >
            <TableRow >
                <Button
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:text="Điện thoại"
                    android:id="@+id/tindang_phone"
                    android:background="@drawable/tindangbutton"
                    />
                <Button
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:text="Gửi SMS"
                    android:id="@+id/tindang_sms"
                    android:background="@drawable/tindangbutton"
                    />
                <Button
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:text="Nhắn tin"
                    android:id="@+id/tindang_mess"
                    android:background="@drawable/tindangbutton"
                    />
            </TableRow>
        </TableLayout>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/colorSigup"
                >
                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/back_30px"
                    android:layout_marginLeft="5dp"
                    android:background="@color/colorSigup"
                    android:id="@+id/tt_btnback"
                    />
            </LinearLayout>

        <com.smarteist.autoimageslider.SliderView
            android:id="@+id/slidertt"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            app:sliderAnimationDuration="600"
            app:sliderAutoCycleDirection="back_and_forth"
            app:sliderAutoCycleEnabled="true"
            app:sliderIndicatorAnimationDuration="600"
            app:sliderIndicatorGravity="center_horizontal|bottom"
            app:sliderIndicatorMargin="15dp"
            app:sliderIndicatorOrientation="horizontal"
            app:sliderIndicatorPadding="3dp"
            app:sliderIndicatorRadius="2dp"
            app:sliderIndicatorSelectedColor="#5A5A5A"
            app:sliderIndicatorUnselectedColor="@color/app2"
            app:sliderScrollTimeInSec="1" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:background="@drawable/textprofile"
                android:paddingLeft="20dp"
                android:paddingRight="8dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:id="@+id/tt_tittle"
                    android:textSize="18dp"
                    android:fontFamily="@font/font1"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/tt_gia"
                    android:fontFamily="@font/font1"
                    android:textColor="@color/red"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:id="@+id/tt_diachia"
                    android:fontFamily="@font/font1"
                    android:gravity="center"
                    android:textSize="10dp"
                    android:drawableLeft="@drawable/address_17px"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/textprofile"
                android:layout_height="70dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/tt_imageprofile"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/circleimg"
                    />
                <LinearLayout
                    android:layout_width="230dp"
                    android:layout_height="45dp"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:fontFamily="@font/font1"
                        android:textStyle="bold"
                        android:textSize="14dp"
                        android:textColor="@color/black"
                        android:id="@+id/tt_username"
                        />

                    <RatingBar
                        style="@android:style/Widget.DeviceDefault.Light.RatingBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:isIndicator="true"
                        android:id="@+id/tt_rating"
                        android:layout_marginTop="5dp"
                        android:numStars="5" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    >
                    <Button
                        android:layout_width="70dp"
                        android:layout_height="25dp"
                        android:text="Xem trang"
                        android:textSize="7dp"
                        android:textColor="@color/red"
                        android:fontFamily="@font/font1"
                        android:id="@+id/btnViewProfile"
                        android:layout_gravity="center"
                        android:background="@drawable/buttonview"
                        />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:paddingTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:id="@+id/tt_mota"
                android:inputType="textMultiLine"
                android:fontFamily="@font/font1"
                android:textColor="@color/black"
                android:paddingLeft="20dp"
                android:background="@drawable/textprofile"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:paddingLeft="20dp"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font1"
                        android:textColor="@color/black"
                        android:paddingLeft="2dp"
                        android:textSize="11dp"
                        android:text="Diện tích: "
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/surface_18px"
                        />
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font1"
                        android:id="@+id/tt_dt"
                        android:textColor="@color/black"
                        android:textSize="11dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:paddingLeft="20dp"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font1"
                        android:textColor="@color/black"
                        android:text="Hướng nhà: "
                        android:textSize="11dp"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/west_direction_18px"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font1"
                        android:id="@+id/tt_huongnha"
                        android:textColor="@color/black"
                        android:textSize="11dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:paddingLeft="20dp"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font1"
                        android:textColor="@color/black"
                        android:textSize="11dp"
                        android:text="Pháp lý: "
                        android:drawableLeft="@drawable/law_18px"
                        android:drawablePadding="5dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font1"
                        android:textColor="@color/black"
                        android:textSize="11dp"
                        android:id="@+id/tt_phaply"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
</RelativeLayout>